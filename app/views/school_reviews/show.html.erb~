    <% dislikes = @school_review.vote_count - likes %>
  <% elsif %>
    <% likes = 0 %>
    <% dislikes = 0 %>
  <% end %>
  
  <%= link_to "like", vote_school_review_path(@school_review, type: "up"), id: "like", remote: true, method: "post" %> (<span id="show-likes"><%= likes.to_i %></span>) |
  <%= link_to "dislike", vote_school_review_path(@school_review, type: "down"), id: "dislike", remote:true, method: "post" %> (<span id="show-dislikes"><%= dislikes.to_i %></span>)<br>
  
  
