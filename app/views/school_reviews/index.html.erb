<% content_for :actions do %>
  <%= link_to majors_index_path( :school_id => @school_id ), class: 'btn btn-primary btn-large pull-right' do %>
         Post Major Review
  <% end %>
<% end %>

<% @small_text = @school.city + ", " + @state.name %>

<div class="container-fluid animate-fade-in-500">
  <div class="row mt20">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8" >
      <div class="row" >
        <div class="col-lg-8">
          <h3 style="margin:0;">Here are some quick stats for this college</h3>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid animate-fade-in-500">
  <div class="row mt20">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8" >
      <div class="row" >
        <div class="col-lg-6">
          <div class="panel panel-danger" id="panels">
            <div class="panel-heading">
              <p class="lead">
                <i class="fa fa-star-half-full">
                </i>
                OVERALL <b>SCHOOL RATING</b>
              </p>
            </div>
            <div class="panel-body text-xs-center text-md-center text-lg-center" >
              <h2 class="page-hits m0 text-red-400">
                <% if @school.rating_average != nil %>
                    <%= number_with_precision(@school.rating_average, precision: 1) %> <small>out of 5</small>
                <% else %>
                    0.0 <small>out of 5</small>
                <% end %>

              </h2>
            </div>
            <div class="panel-footer">
              <% if @school.rating_average != nil && @school.rating_average > 0 %>
                  <% if @school.rating_average < 1 %>
                      This college is terrible
                  <% elsif @school.rating_average < 2 %>
                        Not a great college
                  <% elsif @school.rating_average < 3 %>
                        This college is just kind of meh..
                  <% elsif @school.rating_average < 4 %>
                        This college is good
                  <% elsif @school.rating_average < 5 %>
                        This college is great
                  <% else %>
                        Best college ever!
                  <% end %>
              <% else %>
                Average school rating for this college
              <% end %>

            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="panel panel-danger" id="panels">
            <div class="panel-heading">
              <p class="lead">
                <i class="fa fa-users">
                </i>
                PARTY <b>SCHOOL RATING</b>
              </p>
            </div>
            <div class="panel-body text-xs-center text-md-center text-lg-center" >
              <h2 class="page-hits m0 text-red-400">
                <% if @school.party_average != nil %>
                    <%= number_with_precision(@school.party_average, precision: 1) %> <small>out of 5</small>
                <% else %>
                    0.0 <small>out of 5</small>
                <% end %>

              </h2>
            </div>
            <div class="panel-footer">
              <% if @school.party_average != nil && @school.party_average > 0 %>
                  <% if @school.party_average < 1 %>
                      Pretty much no parties here :-(
                  <% elsif @school.party_average < 2 %>
                      Not a great party school
                  <% elsif @school.party_average < 3 %>
                      Partying here is kind of meh..
                  <% elsif @school.party_average < 4 %>
                      Good party school
                  <% elsif @school.party_average < 5 %>
                      This is a great party school
                  <% else %>
                      Best party school ever!
                  <% end %>
              <% else %>
                  Average party rating for this college
              <% end %>
            </div>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-lg-6">
          <div class="panel panel-success" id="panels">
            <div class="panel-heading">
              <p class="lead">
                <i class="fa fa-smile-o">
                </i>
                AVERAGE <b>STARTING SALARY</b>
              </p>
            </div>
            <div class="panel-body text-xs-center text-md-center text-lg-center" >
              <h2 class="page-hits m0 text-green-400">
                <% if @school.salary_average != nil %>
                    <%= number_to_currency(@school.salary_average, precision: 2) %>
                <% else %>
                    $0.00
                <% end %>

              </h2>
            </div>
            <div class="panel-footer">
              Average starting salary after graduation
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="panel panel-success" id="panels">
            <div class="panel-heading">
              <p class="lead">
                <i class="fa fa-frown-o">
                </i>
                AVERAGE <b>COLLEGE DEBT</b>
              </p>
            </div>
            <div class="panel-body text-xs-center text-md-center text-lg-center" >
              <h2 class="page-hits m0 text-green-400">
                <% if @school.debt_average != nil %>
                    <%= number_to_currency(@school.debt_average, precision: 2) %>
                <% else %>
                    $0.00
                <% end %>

              </h2>
            </div>
            <div class="panel-footer">
              Average tuition debt after graduating
            </div>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-lg-6">
          <div class="panel panel-info" id="panels">
            <div class="panel-heading">
              <p class="lead">
                <i class="fa fa-dollar">
                </i>
                WORTH THE <b>MONEY?</b>
              </p>
            </div>
            <div class="panel-body text-xs-center text-md-center text-lg-center" >
              <h2 class="page-hits m0 text-light-blue-400">
                <% if @school.worth_money_average != nil %>
                    <%= number_to_percentage(@school.worth_money_average*100,precision: 0) %>
                <% else %>
                    0.0%
                <% end %>
              </h2>
            </div>
            <div class="panel-footer">
              Grads saying this college was worth tuition
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="panel panel-info" id="panels">
            <div class="panel-heading">
              <p class="lead">
                <i class="fa fa-thumbs-o-up">
                </i>
                BEING <b>RECOMMENDED</b>
              </p>
            </div>
            <div class="panel-body text-xs-center text-md-center text-lg-center" >
              <h2 class="page-hits m0 text-light-blue-400">
                <% if @school.recommend_average != nil %>
                    <%= number_to_percentage(@school.recommend_average*100, precision: 0) %>
                <% else %>
                    0.0%
                <% end %>

              </h2>
            </div>
            <div class="panel-footer">
              Grads recommending this college
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Top paying Majors from this college</h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-hover table-striped">
              <tbody>
              <% (1..5).each do |index|%>
                <tr>
                  <td><%= index %></td>
                  <td>
                    <ul class="list-unstyled small">
                      <li class="mb10">
                        <% if eval("@school.top_major_amount_#{index}") != nil %>
                            <b><%= link_to eval("@school.top_major_name_#{index}"), majors_index_path( :school_id => @school_id ) %></b><br/>
                            <%= number_to_currency(eval("@school.top_major_amount_#{index}"), precision: 2) %>
                        <% else %>
                            <b>N/A</b>
                        <% end %>
                      </li>
                    </ul>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>



<div class="container-fluid animate-fade-in-500" style="margin-bottom: 8px;">
