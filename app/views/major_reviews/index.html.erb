<div class="container animate-fade-in-500">
  <div class="row mt20">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8" >
      <div class="row" >
        <div class="col-lg-6">
          <div class="panel panel-danger" id="panels">
            <div class="panel-heading">
              <p class="lead">
                <i class="fa fa-star-half-full">
                </i>
                DIFFICULTY <b>RATING</b>
              </p>
            </div>
            <div class="panel-body text-xs-center text-md-center text-lg-center" >
              <h2 class="page-hits m0 text-red-400">
                <% if @major.difficulty_average != nil && @major.major_counter != nil && @major.major_counter > 0 %>
                    <%= number_with_precision(@major.difficulty_average, precision: 1) %> <small>out of 5</small>
                <% else %>
                    N/A
                <% end %>

              </h2>
            </div>
            <div class="panel-footer">
              <% if @major.difficulty_average != nil && @major.difficulty_average > 0 %>
                  <% if @major.difficulty_average <= 1 %>
                      This major is easy peasy
                  <% elsif @major.difficulty_average <= 2 %>
                      This major is uncomplicated
                  <% elsif @major.difficulty_average <= 3 %>
                      This major isn't too tough
                  <% elsif @major.difficulty_average <= 4 %>
                      This major is challenging
                  <% else %>
                      This major is very difficult
                  <% end %>
              <% else %>
                  Average difficulty rating for this major
              <% end %>

            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="panel panel-danger" id="panels">
            <div class="panel-heading">
              <p class="lead">
                <i class="fa fa-thumbs-o-up">
                </i>
                BEING <b>RECOMMENDED</b>
              </p>
            </div>
            <div class="panel-body text-xs-center text-md-center text-lg-center" >
              <h2 class="page-hits m0 text-red-400">
                <% if @major.recommend_average != nil && @major.major_counter != nil && @major.major_counter > 0 %>
                    <% rec_average = @major.recommend_average * 100  %>
                    <%= number_with_precision(rec_average, precision: 1) %>%
                <% else %>
                    N/A
                <% end %>

              </h2>
            </div>
            <div class="panel-footer">
              <% if @major.recommend_average != nil && @major.recommend_average > 0 %>
                  <% if @major.recommend_average <= 0.5 %>
                      Not many grads recommending this major
                  <% elsif @major.recommend_average <= 0.75 %>
                      This major has decent recommendations
                  <% elsif @major.recommend_average < 0.9 %>
                      Grads are recommending this major
                  <% else %>
                      Grads love this major!
                  <% end %>
              <% else %>
                  Percentage of grads recommending this major
              <% end %>
            </div>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-lg-6">
          <div class="panel panel-success" id="panels">
            <div class="panel-heading">
              <p class="lead">
                <i class="fa fa-smile-o">
                </i>
                STARTING <b>SALARY</b> <small>Overall</small>
              </p>
            </div>
            <div class="panel-body text-xs-center text-md-center text-lg-center" >
              <h2 class="page-hits m0 text-green-400">
                <% if @major.overall_salary != nil && @major.major_counter != nil && @major.major_counter > 0 %>
                    <%= number_to_currency(@major.overall_salary, precision: 2) %>
                <% else %>
                    N/A
                <% end %>

              </h2>
            </div>
            <div class="panel-footer">
              Average starting salary after graduation
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="panel panel-success" id="panels">
            <div class="panel-heading">
              <p class="lead">
                <i class="fa fa-smile-o">
                </i>
                STARTING <b>SALARY</b> <small>Past 2 years</small>
              </p>
            </div>
            <div class="panel-body text-xs-center text-md-center text-lg-center" >
              <h2 class="page-hits m0 text-green-400">
                <% if @major.salary_average != nil && @major.major_counter != nil && @major.major_counter > 0 %>
                    <%= number_to_currency(@major.salary_average, precision: 2) %>
                <% else %>
                    N/A
                <% end %>

              </h2>
            </div>
            <div class="panel-footer">
              Average starting salary after graduation
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading" style="border-bottom: none;">
          <h3 class="panel-title">Top paying Colleges for this major for class of <%= (Date.today.year) %>, <%= (Date.today.year - 1) %>, and <%= (Date.today.year - 2) %></h3>
        </div>
        <div class="panel-body" style="padding: 0 15px 15px 15px;">
          <div class="table-responsive">
            <table class="table table-striped" style="margin-bottom: 0;">
              <tbody>
              <% amounts_array = @major.top_school_amounts.to_s.split("^")%>
              <% ids_array = @major.top_school_ids.to_s.split("^")%>
              <% names_array = @major.top_school_names.to_s.split("^")%>
              <% (0..4).each do |index|%>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td>
                      <ul class="list-unstyled small" style="margin-bottom: 0;">
                        <li style="margin-bottom: 0;">
                          <% if amounts_array[index] != nil && amounts_array[index].to_s != "" %>
                              <b><%= link_to names_array[index].to_s,  school_reviews_path(:the_school => {:school_id => ids_array[index].to_s} ) %></b><br/>
                              <%= number_to_currency(amounts_array[index].to_i, precision: 2) %>
                          <% else %>
                              <b>N/A</b>
                          <% end %>
                        </li>
                      </ul>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


